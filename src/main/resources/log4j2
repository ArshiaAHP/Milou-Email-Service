<?xml version="1.0" encoding="UTF-8"?>
     <Configuration status="WARN">
         <Appenders>
             <!-- Console appender for application output (will disable later) -->
             <Console name="Console" target="SYSTEM_OUT">
                 <PatternLayout pattern="%m%n"/>
             </Console>
             <!-- File appender for all logs -->
             <File name="File" fileName="logs/milou.log" append="true">
                 <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
             </File>
         </Appenders>
         <Loggers>
             <!-- Application logger (aut.ap package) -->
             <Logger name="aut.ap" level="info" additivity="false">
                 <AppenderRef ref="Console"/>
                 <AppenderRef ref="File"/>
             </Logger>
             <!-- Hibernate logger (SQL and bindings to file only) -->
             <Logger name="org.hibernate" level="info" additivity="false">
                 <AppenderRef ref="File"/>
             </Logger>
             <Logger name="org.hibernate.SQL" level="debug" additivity="false">
                 <AppenderRef ref="File"/>
             </Logger>
             <Logger name="org.hibernate.orm.jdbc.bind" level="trace" additivity="false">
                 <AppenderRef ref="File"/>
             </Logger>
             <!-- Root logger for other frameworks -->
             <Root level="error">
                 <AppenderRef ref="File"/>
             </Root>
         </Loggers>
     </Configuration>